%center
  %h1 User Address
  %table{:cellpadding => "10"}
    %tr
      %th Name
      %th House no
      %th Street
      %th City
      %th State
      %th Pincode
      %tr
        %td= @user.name+" "+@user.last_name
        %td= @address.house_no
        %td= @address.street
        %td= @address.city
        %td= @address.state
        %td= @address.pincode
      %tr
        %td= link_to 'Back', users_path
